<Window x:Class="Hyyblo_View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HYYBLO_prog3"
        mc:Ignorable="d"
        Title="WpfTTD" Height="600" Width="800"
        Background="WhiteSmoke"
        Icon="icon.ico" MouseWheel="Window_MouseWheel">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="44"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="30" />
        </Grid.ColumnDefinitions>

        <UserControl Name="PlayArea" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"  Grid.RowSpan="3"/> <!-- A játékteret rajzoljuk ki mindig legalulra -->

        <Menu Background="Transparent" Name="TopBar" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" MouseEnter="ViewMouseEnter" MouseLeave="ViewMouseLeave"/>
        <Menu Background="Transparent" Name="BottomBar" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" MouseEnter="ViewMouseEnter"  MouseLeave="ViewMouseLeave"/>
        <Menu Background="Transparent" Name="LeftBar" Grid.Row="1" Grid.Column="0" Grid.RowSpan="3" MouseEnter="ViewMouseEnter"  MouseLeave="ViewMouseLeave"/>
        <Menu Background="Transparent" Name="RightBar" Grid.Row="1" Grid.Column="2" Grid.RowSpan="3" MouseEnter="ViewMouseEnter"  MouseLeave="ViewMouseLeave"/>

        <Menu Grid.Row="0" Background="Transparent" Grid.Column="0" Grid.ColumnSpan="3">
            <ToggleButton Name="btnRoad" Height="40" Width="40" Click="BtnRoad_Click" Focusable="False">
                <Image Source="/Images/road.png" />
            </ToggleButton>
            <ToggleButton Name="btnWarehouse" Height="40" Width="40" Click="BtnWarehouse_Click" Focusable="False">
                <Image Source="/Images/Buildings/warehouse.png" />
            </ToggleButton>
            <ToggleButton Name="btnDelete" Height="40" Width="40" Click="BtnDelete_Click" Focusable="False">
                <Image Source="/Images/delete.png" />
            </ToggleButton>
            <ToggleButton Name="btnVehicle" Height="40" Width="40" Click="BtnVehicle_Click" Focusable="False">
                <Image Source="/Images/truck.png" />
            </ToggleButton>
        </Menu>

        <StatusBar Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3">
            <Label x:Name="lblMoney" Width="328" Height="30" FontFamily="Garamond" />
        </StatusBar>
    </Grid>
</Window>
