<Window x:Class="HYYBLO_prog3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HYYBLO_prog3"
        mc:Ignorable="d"
        Title="WpfTTD" Height="600" Width="800" Loaded="Window_Loaded"
        Background="WhiteSmoke"
        Icon="icon.ico" MouseWheel="Window_MouseWheel">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="44"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        
        <UserControl Name="PlayArea" Grid.Row="1"/> <!-- A játékteret rajzoljuk ki mindig legalulra -->

        <Menu Grid.Row="0" Background="Transparent">
            <Button Name="btnRoad" Height="40" Width="40" Click="btnRoad_Click">
                <Image Source="/Images/road.png" />
            </Button>
            <Button Name="btnWarehouse" Height="40" Width="40" Click="btnWarehouse_Click">
                <Image Source="/Images/Buildings/warehouse.png" />
            </Button>
            <Button Name="btnDelete" Height="40" Width="40" Click="btnDelete_Click">
                <Image Source="/Images/delete.png" />
            </Button>
            <Button Name="btnVehicle" Height="40" Width="40" Click="btnVehicle_Click">
                <Image Source="/Images/truck.png" />
            </Button>
        </Menu>

        <StatusBar Grid.Row="2">
            
        </StatusBar>
    </Grid>
</Window>
